{
  "build": {
    "dockerfile": "Dockerfile"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.cpptools-extension-pack",
        "ms-vscode.vscode-embedded-tools",
        "marus25.cortex-debug"
      ]
    }
  },
  "runArgs": [
    "--network=host"
  ],
  "containerEnv": {
    "SHELL" : "/bin/bash",
    "ROS_DOMAIN_ID": "5"
  },
  "postCreateCommand": "echo \"source /opt/ros/humble/setup.bash\" >> ~/.bashrc"
}